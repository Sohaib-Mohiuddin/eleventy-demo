{
  "name": "eleventy-app",
  "private": true,
  "scripts": {
    "dev": "npm run css:dev & npm run serve",
    "serve": "npx --yes @11ty/eleventy@3.0.0 --serve --port=8080 --watch",
    "build": "npm run css:build && npx --yes @11ty/eleventy@3.0.0",
    "css:dev": "npx --yes tailwindcss@3.4.13 -i src/styles/main.css -o src/assets/styles.css --watch --postcss",
    "css:build": "npx --yes tailwindcss@3.4.13 -i src/styles/main.css -o src/assets/styles.css --minify --postcss",
    "clean": "rm -rf _site node_modules"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.20",
    "decap-cms": "^3.8.3",
    "decap-server": "^3.3.1",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13"
  }
}
